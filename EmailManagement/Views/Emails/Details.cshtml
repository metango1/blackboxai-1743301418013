@model EmailManagement.Models.Email

@{
    ViewData["Title"] = "Email Details";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2">Email Details</h1>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.EmailId" class="btn btn-primary me-2">
                        <i class="fas fa-edit me-2"></i>Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>

            <!-- Basic Information Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Email ID</dt>
                                <dd class="col-sm-8">@Model.EmailId</dd>

                                <dt class="col-sm-4">First Name</dt>
                                <dd class="col-sm-8">@Model.FirstName</dd>

                                <dt class="col-sm-4">Last Name</dt>
                                <dd class="col-sm-8">@Model.LastName</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Tab Group</dt>
                                <dd class="col-sm-8">@Model.TabGroup</dd>

                                <dt class="col-sm-4">Created</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>

                                <dt class="col-sm-4">Last Updated</dt>
                                <dd class="col-sm-8">@Model.UpdatedAt.ToString("g")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Tags Card -->
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-tags me-2"></i>Tags
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.EmailTags.Any())
                            {
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var emailTag in Model.EmailTags)
                                    {
                                        <span class="badge bg-info">
                                            @emailTag.Tag.TagName
                                        </span>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No tags assigned</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Browser Groups Card -->
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-browser me-2"></i>Browser Groups
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.EmailBrowserGroups.Any())
                            {
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var emailBrowserGroup in Model.EmailBrowserGroups)
                                    {
                                        <span class="badge bg-success">
                                            @emailBrowserGroup.BrowserGroup.BrowserGroupName
                                        </span>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No browser groups assigned</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Use Cases Card -->
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-tasks me-2"></i>Use Cases
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.EmailUseCases.Any())
                            {
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var emailUseCase in Model.EmailUseCases)
                                    {
                                        <span class="badge bg-warning">
                                            @emailUseCase.UseCase.UseCaseName
                                        </span>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No use cases assigned</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-4 text-center">
                <a asp-action="Edit" asp-route-id="@Model.EmailId" class="btn btn-primary me-2">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.EmailId" class="btn btn-danger me-2">
                    <i class="fas fa-trash me-2"></i>Delete
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>