@model EmailManagement.Models.Email

@{
    ViewData["Title"] = "Delete Email";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2">Delete Email</h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>

            <div class="card shadow-sm border-danger mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Warning
                    </h5>
                </div>
                <div class="card-body">
                    <p class="lead mb-0">
                        Are you sure you want to delete this email record? This action cannot be undone.
                    </p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Email Details
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Email ID</dt>
                        <dd class="col-sm-9">@Model.EmailId</dd>

                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-3">Tab Group</dt>
                        <dd class="col-sm-9">@Model.TabGroup</dd>

                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>

                        <dt class="col-sm-3">Last Updated</dt>
                        <dd class="col-sm-9">@Model.UpdatedAt.ToString("g")</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4 text-center">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="EmailId" />
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="fas fa-trash me-2"></i>Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>