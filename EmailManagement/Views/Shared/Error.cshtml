@model EmailManagement.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="fas fa-exclamation-triangle text-warning display-1 mb-4"></i>
                    <h1 class="text-danger mb-4">Error</h1>
                    <h2 class="h4 text-muted mb-4">An error occurred while processing your request.</h2>

                    @if (Model?.ShowRequestId ?? false)
                    {
                        <div class="alert alert-info">
                            <strong>Request ID:</strong> <code>@Model?.RequestId</code>
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Return to Homepage
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-4 shadow-sm">
                <div class="card-body">
                    <h3 class="h5 mb-3">What can you do?</h3>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-redo me-2 text-primary"></i>
                            Refresh the page and try again
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-backward me-2 text-primary"></i>
                            Go back to the previous page
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-home me-2 text-primary"></i>
                            Return to the homepage
                        </li>
                        <li>
                            <i class="fas fa-envelope me-2 text-primary"></i>
                            Contact support if the problem persists
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>