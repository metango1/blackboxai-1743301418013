@model EmailManagement.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Error
                    </h5>
                </div>
                <div class="card-body">
                    <h2 class="text-danger mb-3">An error occurred while processing your request.</h2>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @Model.ErrorMessage
                        </div>
                    }

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-info">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ExceptionDetails) && Context.Environment.IsDevelopment())
                    {
                        <div class="card mt-4">
                            <div class="card-header">
                                <h6 class="mb-0">Exception Details</h6>
                            </div>
                            <div class="card-body">
                                <pre class="mb-0"><code>@Model.ExceptionDetails</code></pre>
                            </div>
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Return to Homepage
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="h5 mb-3">What can you do?</h3>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-redo me-2 text-primary"></i>
                            Refresh the page and try again
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-backward me-2 text-primary"></i>
                            Go back to the previous page
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-home me-2 text-primary"></i>
                            Return to the homepage
                        </li>
                        <li>
                            <i class="fas fa-envelope me-2 text-primary"></i>
                            Contact support if the problem persists
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>