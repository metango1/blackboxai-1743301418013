@{
    ViewData["Title"] = "Home";
}

<div class="container fade-in">
    <!-- Hero Section -->
    <div class="row align-items-center py-5">
        <div class="col-lg-6">
            <h1 class="display-4 fw-bold mb-4">Email Management System</h1>
            <p class="lead text-muted mb-4">
                A powerful system to organize and manage your email records with advanced search capabilities 
                and comprehensive categorization features.
            </p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a asp-controller="Emails" asp-action="Index" class="btn btn-primary btn-lg px-4 me-md-2">
                    <i class="fas fa-search me-2"></i>Browse Emails
                </a>
                <a asp-controller="Emails" asp-action="Create" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="fas fa-plus me-2"></i>Add New Email
                </a>
            </div>
        </div>
        <div class="col-lg-6 d-none d-lg-block">
            <img src="https://images.pexels.com/photos/3785927/pexels-photo-3785927.jpeg" 
                 alt="Email Management" class="img-fluid rounded-custom shadow-sm" />
        </div>
    </div>

    <!-- Features Section -->
    <div class="row py-5">
        <h2 class="text-center mb-5">Key Features</h2>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-search fa-3x text-primary mb-3"></i>
                    <h3 class="card-title h5">Advanced Search</h3>
                    <p class="card-text text-muted">
                        Search emails by ID, use case, tags, browser groups, and more with our powerful search functionality.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-tags fa-3x text-primary mb-3"></i>
                    <h3 class="card-title h5">Smart Categorization</h3>
                    <p class="card-text text-muted">
                        Organize emails with tags, browser groups, and use cases for better management and retrieval.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-3x text-primary mb-3"></i>
                    <h3 class="card-title h5">Efficient Management</h3>
                    <p class="card-text text-muted">
                        Easily manage and track email records with our intuitive interface and comprehensive dashboard.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Start Guide -->
    <div class="row py-5">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title h4 mb-4">Quick Start Guide</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Browse existing email records in the system
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Add new email records with associated metadata
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Search and filter emails using various criteria
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Manage tags and categories for better organization
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Update and maintain email records as needed
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Track changes with built-in timestamp functionality
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>